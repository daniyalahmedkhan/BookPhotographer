<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@color/colorDark">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:id="@+id/headImg"
                android:src="@mipmap/contactlist_img_four"
                />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALi Raza"
                android:id="@+id/txtHeadName"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/colorWhite"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="First Name : Ali Raza"
                    android:id="@+id/txtFname"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Last Name : Mehmood"
                android:id="@+id/txtLname"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Gender : Male"
                android:id="@+id/txtGender"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Location : Karachi"
                android:id="@+id/txtLocation"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Contact : 03328211234"
                android:id="@+id/txtContact"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/lisView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice"
        android:layout_margin="10dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp" />

</LinearLayout>